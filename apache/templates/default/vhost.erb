## Virtual host template
#
#
<Virtualhost *:<%= @port %> >

 ServerName <%= @domain %> 
 DocumentRoot  <%= @document_root %>
 
  <Directory />
	Options Indexes FollowSymLinks
	AllowOverride None
  </Directory>


  <Directory <%= @document_root %> >
	Options Indexes FollowSymLinks MultiViews
	AllowOverride None
	Order allow,deny
	allow from all
  </Directory>

</Virtualhost>
